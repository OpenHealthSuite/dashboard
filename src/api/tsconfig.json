{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2019",
      "sourceMap": true,
      "strict": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "types": ["@types/node"],
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ]
    },
    "include": [
      "src/**/*.ts",
      "types/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}